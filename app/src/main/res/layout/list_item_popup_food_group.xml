<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_textveiw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="6"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/gray_600"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_icon_imageview" />

    <ImageView
        android:id="@+id/group_icon_imageview"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:paddingStart="8dp"
        android:paddingTop="14dp"
        android:paddingEnd="8dp"
        android:paddingBottom="2dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/name_textveiw"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/name_textveiw"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_food_item_vegetables" />
</androidx.constraintlayout.widget.ConstraintLayout>