<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arcm.dietcalculator" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.arcm.dietcalculator.MainApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.arcm.dietcalculator.CreateRecipeActivity"
            android:exported="true"
            android:label="@string/title_activity_create_recipe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.arcm.dietcalculator.SettingsActivity"
            android:exported="true" />
        <activity
            android:name="com.arcm.dietcalculator.MainActivity"
            android:theme="@style/AppTheme.Launcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arcm.dietcalculator.SetupActivity"
            android:noHistory="true" />
        <activity android:name="com.arcm.dietcalculator.AddNewFoodItemActivity" />
    </application>

</manifest>